<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainFrame"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ch.epfl.sdp.game.TargetSelectionFragment">

    <ImageView
        android:id="@+id/crosshair_icon"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:contentDescription="@string/crosshair_icon"
        android:src="@drawable/ic_target_icon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/currentTarget"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_marginStart="8dp"
        android:gravity="center_vertical"
        android:textSize="24sp"
        app:layout_constraintStart_toEndOf="@+id/crosshair_icon"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>