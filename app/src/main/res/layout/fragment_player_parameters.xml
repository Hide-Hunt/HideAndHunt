<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".lobby.PlayerParametersFragment">

    <Switch
        android:id="@+id/switch_faction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/colorPrimaryVeryDark"
        android:buttonTint="@color/colorPrimaryDark"
        android:checked="false"
        android:foregroundTint="@color/colorAccent"
        android:showText="true"
        android:textColor="@color/colorAccent"
        android:textColorHint="@color/colorAccent"
        android:textIsSelectable="false"
        android:textOff="@string/predator_faction_name"
        android:textOn="@string/prey_faction_name"
        android:thumbTint="@color/colorPrimaryDark"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>